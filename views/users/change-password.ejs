<%- include('../layouts/header', { title: 'Cambiar Contrase√±a - POS Dulces', activeTab: 'users' }) %>

    <div class="container">
        <div class="page-header">
            <h2>üîë Cambiar Contrase√±a</h2>
            <a href="/users/<%= user.id %>" class="btn btn-secondary">‚Üê Volver a Detalles</a>
        </div>

        <div class="form-container">
            <div class="card">
                <div class="card-header">
                    <h3>Cambiar Contrase√±a de <%= user.username %></h3>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <strong>‚ùå Error:</strong> <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/users/<%= user.id %>/change-password" class="user-form">
                        <div class="form-group">
                            <label for="newPassword">Nueva Contrase√±a *</label>
                            <input type="password" 
                                   id="newPassword" 
                                   name="newPassword" 
                                   class="form-control" 
                                   placeholder="M√≠nimo 6 caracteres"
                                   required
                                   autofocus>
                            <small class="form-text">M√≠nimo 6 caracteres</small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Confirmar Nueva Contrase√±a *</label>
                            <input type="password" 
                                   id="confirmPassword" 
                                   name="confirmPassword" 
                                   class="form-control" 
                                   placeholder="Repite la nueva contrase√±a"
                                   required>
                        </div>

                        <div class="alert alert-warning">
                            <strong>‚ö†Ô∏è Atenci√≥n:</strong> La contrase√±a ser√° cambiada inmediatamente. 
                            Aseg√∫rate de informar al usuario de su nueva contrase√±a.
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-warning btn-lg">üîë Cambiar Contrase√±a</button>
                            <a href="/users/<%= user.id %>" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                e.preventDefault();
                alert('Las contrase√±as no coinciden');
                return false;
            }

            if (newPassword.length < 6) {
                e.preventDefault();
                alert('La contrase√±a debe tener al menos 6 caracteres');
                return false;
            }

            if (!confirm(`¬øEst√°s seguro de cambiar la contrase√±a del usuario "${<%= user.username %>}"?\n\nEsta acci√≥n no se puede deshacer.`)) {
                e.preventDefault();
                return false;
            }
        });
    </script>

