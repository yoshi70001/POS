<%- include('../layouts/header', { title: 'Editar Usuario - POS Dulces', activeTab: 'users' }) %>

    <div class="container">
        <div class="page-header">
            <h2>‚úèÔ∏è Editar Usuario</h2>
            <a href="/users/<%= user.id %>" class="btn btn-secondary">‚Üê Volver a Detalles</a>
        </div>

        <div class="form-container">
            <div class="card">
                <div class="card-header">
                    <h3>Editar Informaci√≥n del Usuario</h3>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <strong>‚ùå Error:</strong> <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/users/<%= user.id %>?_method=PUT" class="user-form">
                        <input type="hidden" name="_method" value="PUT">
                        
                        <div class="form-group">
                            <label for="username">Nombre de Usuario *</label>
                            <input type="text" 
                                   id="username" 
                                   name="username" 
                                   class="form-control" 
                                   value="<%= user.username %>"
                                   required
                                   autofocus>
                            <small class="form-text">El nombre de usuario debe ser √∫nico</small>
                        </div>

                        <div class="form-group">
                            <label for="role">Rol *</label>
                            <select id="role" name="role" class="form-control" required>
                                <option value="vendedor" <%= user.role === 'vendedor' ? 'selected' : '' %>>
                                    üíº Vendedor
                                </option>
                                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>
                                    üëë Administrador
                                </option>
                            </select>
                            <small class="form-text">
                                <strong>Administrador:</strong> Acceso completo a todas las funciones<br>
                                <strong>Vendedor:</strong> Solo puede realizar ventas
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Nota:</strong> Para cambiar la contrase√±a, usa la opci√≥n "Cambiar Contrase√±a"
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">‚úì Guardar Cambios</button>
                            <a href="/users/<%= user.id %>" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer') %>